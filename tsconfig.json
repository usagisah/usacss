{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": false,
    "declaration": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "incremental": true,
    "outDir": "dist",
    "types": ["vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/__test__/**/*.ts"
  ],
  "types": [
    "vitest/globals"
  ]
}